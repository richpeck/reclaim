////////////////////////////////////////////////////////////

// Main
html,
body
  height: 100%
  margin: 0

// Main
// This is hacky but whatever (should be stored in main app)
body

  // Vars
  $container: 85%

  // General
  font:
    family: 'Rubik', sans-serif

  ////////////////////////////////
  ////////////////////////////////

  // Sticky Footer
  // Use Flexbox :D
  // https://philipwalton.github.io/solved-by-flexbox/demos/sticky-footer/
  display: flex
  min:
    height: 100vh
  flex:
    direction: column

  ////////////////////////////////
  ////////////////////////////////

  // Styling
  .container
    display:    block
    width:      $container
    margin:     auto
    max:
      width:    1800px
    box:
      sizing:   border-box

  ////////////////////////////////
  ////////////////////////////////

  // Header
  header
    display: block
    position: relative
    padding: 0
    color: rgba(255,255,255,1)
    background: rgba(29,29,29,1)

    // Navigation
    nav

      // Container
      .container
        display: flex
        align:
          items: center
        justify:
          content: space-between

        // Logo
        .logo
          width: auto
          float: left
          text:
            align: center
          vertical:
            align: middle
          a
            display: inline-block
            margin: 2em 0
            padding:
              right: 50px
            &:hover
              opacity: 1
            img
              display: block
              height: 140px

      // Links
      .links
        display: block
        font:
          size: 1.25em
        text:
          align: right !important
        vertical:
          align: middle
        &:hover
          a
            opacity: 0.5
        &.current
          a
            opacity: 0.25
            &.current
              opacity: 1
        text:
          align: center
          transform: uppercase

        // Links
        a
          display: inline-block
          padding: 0.75em 0.5em
          overflow: hidden
          white:
            space: nowrap
          letter:
            spacing: 0.2em
          font:
            size: 16px
          text:
            decoration: none
            overflow: ellipsis
          box:
            sizing: border-box
          &:hover
            opacity: 1 !important

  ////////////////////////////////
  ////////////////////////////////

  // Main
  main

    // Sticky Footer
    // https://philipwalton.github.io/solved-by-flexbox/demos/sticky-footer/
    flex: 1

    // Links
    a
      color: rgba(0,0,0,1)

    // H3
    h3
      margin: 1em 0

    // Div
    & > div
      &:before
        content: ""
        display: block
        height: 450px
        background:
          repeat: no-repeat
          size: 100%
          position: 50% 30%

    // Container
    .container
      display: flex
      padding: 0 2em
      position: relative
      min:
        height: 100%
      padding:
        bottom: 165px
      flex:
        direction: column

      // Height
      // This is a hack but was needed to maintain 100% height for <main>
      // I'd love to change it, but will have to do for now
      .height
        flex: 1
        padding:
          top: 25px

      // CTA
      // This is where the user is given direct action etc
      .cta
        display: block
        position: absolute
        bottom: 0
        left: 0
        right: 0
        margin: 1.35em
        padding: 2.5em 0
        box:
          sizing: border-box
        border:
          top: 2px solid rgba(#ccc,1)
          bottom: 2px solid rgba(#ccc,1)
        font:
          size: 1.5em
        text:
          align: center
        > *
          display: block
        strong
          font:
            size: 1.5em
        span
          margin:
            top: 0.5em

      // Exception
      .exception
        display: block
        position: absolute
        top: 50%
        left: 50%
        transform: translateX(-50%) translateY(-50%)
        font:
          size: 1.75em
          weight: bold
        text:
          align: center
        &:before
          display: block
          content: "⚠️"
          margin:
            bottom: 0.05em
          font:
            size: 2.5em
            weight: bold

    // General
    h1
      &.title
        display: block
        padding: 1em 0 0.5em
        font:
          weight: bold

    // Intro
    .intro
      padding: 1em
      color: rgba(255,255,255,1)
      background: rgba(0,0,0,1)
      margin:
        bottom: 1em
      box:
        sizing: border-box
      a
        color: rgba(255,255,255,1)

    // Flash
    .flash
      > div
        diplay: block !important
        width: 100%
        padding: 1em
        margin:  1em 0
        font:
          weight: bold
        line:
          height: 1.5em
        box:
          sizing: border-box
        vertical:
          align: middle
        &:hover
          cursor: pointer
        &.notice
          color: rgba(255,255,255,1)
          background: rgba(0,0,0,1)
          &:before
            content: "✔️"
            display: inline-block
            margin:
              right: 0.25em
            font:
              size: 1.25em

    // General
    .formtastic
      label
        font:
          weight: bold
      .action
        float: none
        padding:
          right: 0 !important
      .inputs
        overflow: visible
      .errors
        padding: 1.5em
        margin: 0 0 1em 0
        color: rgba(255,255,255,1)
        background: rgba(255,0,0,1)
        font:
          size: 1em
          weight: bold
        list:
          style: none !important
        li
          vertical:
            align: middle
          &:before
            display: inline-block
            content: "⚠️"
            font:
              size: 1.35em
            margin:
              right: 0.25em
            text:
              shadow: none
            vertical:
              align: middle

    // About
    &.about

      // Main Image
      &:before
        background:
          image: asset_url("bg/start_saving.jpg")

    // What
    &.what

      // Main Image
      &:before
        background:
          image: asset_url("bg/what.jpg")

    // Index
    &.index

      // Container
      .container

        // Introduction
        .introduction
          margin: 2.5em 0 2em
          h1
            display: block
            margin: 0 0 1em
            text:
              align: center
            font:
              size: 26px
              weight: 400

          // YouTube
          .youtube-embed
            position: relative
            border: 2px solid rgba(0,0,0,1)
            padding:
              bottom: 56.25%
              top: 30px
            height: 0
            overflow: hidden

            iframe,
            object,
            embed
              position: absolute
              top: 0
              left: 0
              width: 100%
              height: 100%

          // Secondary
          h2
            display: block
            margin: 0.5em 0
            padding: 0.75em
            background: rgba(#ccc, 1)
            text:
              align: center
              transform: capitalize
            font:
              size: 1.65em
            box:
              sizing: border-box
            &.first
              background: rgba(0,0,0,1)
              color: rgba(255,255,255,1)
            &:not(.first)
              a
                color: rgba(255,0,0,1)

        // Success
        .success
          display: flex
          justify:
            content: space-between
          > div
            position: relative
            width: 33%
            padding:
              bottom: 75px
            background:
              color: rgba(0,0,0,1)
              size: cover
              repeat: no-repeat
            margin:
              top: 20px
            box:
              sizing: border-box
            &.car
              background:
                image: asset_url('bg/start_saving.jpeg')
            &.repair
              background:
                image: asset_url('bg/crash.jpg')
            &.bill
              background:
                image: asset_url('bg/driving.jpg')
            h3
              display: block
              color: $base-color
              width: 100%
              overflow:
                x: hidden
              white:
                space: nowrap
              font:
                size: 7.5em
              text:
                align: center
                overflow: ellipsis
              box:
                sizing: border-box
            > div
              display: block
              position: absolute
              bottom: 0
              left: 0
              height: 135px
              width: 100%
              background: rgba(0,0,0,0.85)
              padding: 20px
              box:
                sizing: border-box
              strong
                display: block
                height: 45px
                color: rgba(255,255,255,1)
                font:
                  size: 1.2em
              span
                display: block
                color: rgba(255,255,255,1)

    // FAQ's + News
    // Used for "No Items"
    &.news,
    &.faq
      .container
        .panels
          .empty
            display: block
            position: absolute
            top: 50%
            left: 50%
            transform: translateX(-50%) translateY(-50%)
            font:
              size: 2em
              weight: bold
            text:
              align: center
            &:before
              content: "🛑"
              display: block
              font:
                size: 1.5em

    // News
    &.news

      // Main Image
      &:before
        background:
          image: asset_url("bg/news.jpg")

      // Container
      // Flexbox
      .container

        // Intro
        .intro
          position: sticky
          top: 0
          z:
            index: 1001

        // Panels
        // Used to provide hover functionality etc
        .panels
          display: flex
          flex:
            wrap: wrap
            direction: row
          justify:
            content: space-between
          align:
            items:   stretch
            content: space-between

          // Hover
          &:hover
            .panel
              opacity: 0.45

          // Individual
          .panel
            position: relative
            display: block
            width:    25%
            overflow: hidden
            padding:  1em
            transition: opacity 0.15s ease-in-out
            box:
              sizing: border-box
            margin:
              bottom: 0.5em

            // Hover
            &:hover
              opacity: 1

            // Link
            a
              display: block
              height: 500px
              max:
                height: 500px
              text:
                decoration: none
                align: center
              overflow:
                y: hidden

              // Date
              &:after
                display:  block
                position: absolute
                padding:  0.5em
                content:  attr(data-published)
                color: rgba(255,255,255,1)
                background: rgba(0,0,0,1)
                top: 0
                left: 0

              // Hover
              &:hover
                opacity: 1

              // Image
              .featured
                display: block
                width:   100%
                height:  215px
                overflow: hidden
                img
                  display: block
                  width: 100%
                  min:
                    height: 100%

              // Title
              h3
                &.title
                  margin:  0.5em 0
                  padding: 0 10px
                  color: #1d1d1d
                  font:
                    size: 22px
                    weight: 400

              // Content
              .content
                padding: 0 10px
                color: #1d1d1d
                box:
                  sizing: border-box
                font:
                  size: 14px
                  weight: 300
                letter:
                  spacing: 0.06em

              // CTA
              .button
                display: inline-block
                position: absolute
                right: 0
                bottom: 0
                color: rgba(0,0,0,1)
                border: 0
                padding: 0.25em 0.5em
                &:hover
                  cursor: pointer
                  opacity: 1 !important

    // FAQ
    // Simple accordion-style
    &.faq

      // CSS-only accordion
      // The following is from https://codepen.io/jonyablonski/pen/wreap
      $timing: .25s
      $ease: cubic-bezier(0.865, 0.140, 0.095, 0.870)

      // Main Image
      &:before
        background:
          image: asset_url("faq.jpg")

      // Container
      // Main accordion block
      .container

        // Used for panels
        // Really should integrate with .container but works for now
        .panels

          // Hover
          &:hover
            .panel
              opacity: 0.85

          // Panel
          .panel
            transition: all $timing $ease
            padding:
              bottom: 0.5em
            &:hover
              opacity: 1

            // Input
            input
              &[name='panel']
                display: none
                &:checked
                  & + label
                    background: rgba(0,0,0,0.15)
                  ~ .content
                    display: block
                    visibility: visible
                    height: auto

            // Header
            label
              position:   relative
              display:    block
              padding:    1em
              cursor:     pointer
              background: rgba(0,0,0,0.05)
              transition: all $timing $ease
              font:
                size:   1.5em
                weight: bold
              &:hover
                background: rgba(0,0,0,0.1)

            // Content
            .content
              display: none
              visibility: hidden
              height: 0
              padding: 1em 1em 0
              transition: all $timing $ease
              box:
                sizing: border-box
              font:
                size: 1.05em
              margin:
                bottom: 1em

    // Contact
    &.contact

      // Main Image
      &:before
        background:
          image: asset_url("bg/contact.jpg")

      // Title
      h1
        padding: 0 20%
        &.title
          font:
            size: 80px
            weight: 300
          letter:
            spacing: 0.01em
          line:
            height: 1.4em

      // Intro
      .intro
        color: rgba(29,29,29,.7)
        background: transparent
        padding: 0 20%
        margin: 2em 0
        line:
          height: 1.8em
        font:
          size: 18px
          weight: 400
        letter:
          spacing: 0.06em

      // Map
      #contact_map
        height: 350px
        border: 2px solid rgba(0,0,0,1)
        box:
          sizing: border-box
        &:before
          display: block
          content: "Our Location"
          padding: 0.25em
          color: rgba(255,255,255,1)
          background: rgba(0,0,0,1)
          z:
            index: 1001

      // CTA
      .container
        padding:
          bottom: 135px !important
        .cta
          margin:
            top: 0.25em !important

      // Form
      form
        margin:
          top: 1.5em
        fieldset
          ol
            li
              &#contact_address_input
                margin:
                  bottom: 0.25em
          &.inputs
            margin:
              bottom: 0
          &.actions
            padding:
              top: 0 !important
            input
              margin: 0 !important

    // Claims
    &.claims,
    &.contact

      // Form
      form
        padding:
          top: 0

        // Links
        .links
          margin:
            top: 0.5em
          text:
            align: center
            overflow: ellipsis
          font:
            size: 0.85em
          a
            color: rgba(0,0,0,1) !important
            display: inline-block

        // Inputs
        fieldset
          position: relative
          display: block

          // Legend
          legend
            display: block
            position: sticky
            top: 0
            width: 100%
            margin: 1em 0
            padding: 1em
            background: rgba(#ccc,0.75)
            font:
              size: 1.5em
              weight: bold
            box:
              sizing: border-box

          // Inputs
          ol
            padding: 0 0.75em

          // Last Boolean Section
          &.bools
            &:hover
              ol
                li
                  opacity: 0.55
            ol
              li
                &:hover
                  opacity: 1

          // Actions
          &.actions
            padding:
              top:  0.25em
              left: 0 !important
            ol
              padding: 0 !important
              input,
              button
                &[type='submit']
                  display: block
                  width: 100%
                  margin: 0.5em 0 0
                  color: rgba(255,255,255,1)
                  background: $base-color !important
                  transition: background 0.15s ease-in-out
                  font:
                    weight: bold
                  box:
                    sizing: border-box
                  &:hover
                    background: darken($base-color, 5%)

        // General List
        ul,
        ol
          margin:
            left: 0
          padding:
            left: 0
          list:
            style: none
          li
            width: auto
            &.error
              input,
              textarea
                border: 1px solid rgba(255,0,0,1)
            label
              width: none
              abbr
                display: inline-block
                color: rgba(255,0,0,1)
                padding: 0 0.5em
            input,
            textarea
              border: 1px solid rgba(0,0,0,1)
              transition: color 0.15s ease-in-out
              margin:
                left: 0 !important
              &:hover
                &:placeholder
                  color: rgba(0,0,0,1) !important
            textarea
              padding: 10px

            // Checkboxes
            &.boolean
              display: block
              padding: 0.15em 0
              margin:  0
              transition: opacity 0.15s ease-in-out
              &:hover
                label
                  cursor: pointer
                  font:
                    weight: bold
              label
                display: block
                overflow: hidden
                padding:
                  left: 0
                box:
                  sizing: border-box
                text:
                  overflow: ellipsis
              input
                display: inline-block
                position: relative
                background: rgba(255,255,255,1)
                appearance: none
                padding: 1em
                border: 1px solid rgba(0,0,0,1)
                margin:
                  left:  0
                  right: 0.75em
                &:checked
                  &:after
                    content: '✔️'
                    display: block
                    font-size: 14px
                    position: absolute
                    top: 30%
                    left: 2px
                    color: #99a1a7

            .inline-errors
              display: block
              color: rgba(255,0,0,1)
              font:
                weight: bold
              text:
                transform: capitalize

      // Form
      form
        display: block

        ol
          li
            padding: 2px 0
            input
              display: inline-block
              padding: 10px
              margin:
                  left: 150px
              vertical:
                align: middle

  ////////////////////////////////
  ////////////////////////////////

  // Footer
  footer
    position: relative
    padding: 0

    // Variables
    $padding: 2em

    // Container
    > .container
      display: flex
      padding: $padding 0 0
      color: rgba(29,29,29,.3)
      justify:
        content: space-between
      font:
        size: 18px
      box:
        sizing: border-box
      margin:
        bottom: $padding
      a
        color: rgba(0,0,0,1)

      // Company
      .company
        > div
          display: block
          width: 100%
          overflow: hidden
          margin: 0.25em 0
          white:
            space: nowrap
          text:
            overflow: ellipsis
          margin:
            bottom: 0.25em
          &:before
            display: inline-block
            margin:
              right: 0.25em
        .name
          a
            display: block
            color: rgba(0,0,0,1)
            text:
              decoration: none
            font:
              size: 1.5em
              weight: bold
            margin:
              bottom: 0.25em
            &:hover
              opacity: 1
            &:before
              content: "©"
              margin:
                right: 0.15em
            &:after
              display:  block
              content:  " "
              margin:   15px 0 10px
              width:    20px
              height:   3px
              background: rgba(255,255,255,1)
        .title
          font:
            size: 1.35em
            weight: bold
          &:after
            display:  block
            content:  " "
            margin:   15px 0 10px
            width:    20px
            height:   3px
            background: rgba(255,255,255,1)
          a
            &.reviews
              display: block
              color: transparent
              width: 200px
              padding: 0.65em 0
              background:
                image: asset_url('tp.png')
                size:  contain
                repeat: space
              &:hover
                color: transparent
                text:
                  decoration: none

      // Contact
      .contact
        text:
          align: center

        // Social Icons
        .social
          display: block
          text:
            align: center
          a
            color: rgba(255,255,255,1)
            background: rgba(0,0,0,1)
            display: inline-block
            height: 45px
            width: 45px
            line:
              height: 45px
            border:
              radius: 50%
            text:
              decoration: none
            font:
              size: 18px
            margin:
              bottom: 0.75em

    // Links
    .links
      display: block
      margin:
        bottom: 1em
      text:
        align: center
      a
        display: inline-block
        color: rgba(0,0,0,1)
        padding: 0 0.5em
        transition: color 0.15s ease-in-out
        line:
          height: 2em
        text:
          decoration: none
          transform: uppercase
        letter:
          spacing: 0.2em
        font:
          size: 13px
        box:
          sizing: border-box
        &:hover
          color: rgba(0,0,0,0.85)

