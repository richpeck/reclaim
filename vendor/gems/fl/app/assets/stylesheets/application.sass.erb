// Main
@import variables
@import functions
@import formtastic

// Libraries
@import <%= gdep.matching_specs.max_by(&:version) ? "font-awesome" : "ionicons" %>

////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////

// Styling
@import styles/**/*

////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////

// Main
html,
body
  height: 100%
  margin: 0

  // Sticky Footer
  // https://css-tricks.com/couple-takes-sticky-footer/
  .wrapper
    $footer: 50px
    min:
      height: 100%
    margin:
      bottom: (-$footer)
    &:after
      height: $footer
    footer
      height: $footer

// Main
// This is hacky but whatever (should be stored in main app)
body

  // Vars
  $container: 850px

  // General
  font:
    family: 'Montserrat', sans-serif

  ////////////////////////////////
  ////////////////////////////////

  // Styling
  .container
    display:    block
    width:      $container
    margin:     auto
    box:
      sizing:   border-box

  ////////////////////////////////
  ////////////////////////////////

  // Header
  header
    display: block
    padding: 0
    box:
      shadow: 0 -1px 3px 0 rgba(0,0,0,0.75)

    // Navigation
    nav
      padding: 0 0 1.5em
      color: rgba(255,255,255,1)
      background: rgba(0,0,0,0.95)

      // Top
      .top
        display: block
        color: rgba(255,255,255,1)
        background: rgba(0,0,0,1)
        margin:
          bottom: 1.5em
        font:
          size: 0.85em
        .container
          display: block
          text:
            align: right
          a
            &.claim
              display: inline-block
              color: rgba(255,255,255,1)
              background: rgba(255,255,255,0.15)
              padding: 5px
              transition: color 0.15s ease-in-out, background 0.15s ease-in-out
              margin:
                left: 7px
              text:
                decoration: none
              &:hover
                opacity: 1
                color: $base-color
                background: rgba(255,255,255,0.1)

      // Container
      .container
        display: flex
        justify:
          content: space-between
        align:
          items: center

        // Div
        > div
          display: inline-block
          width: 50%

        // Logo
        .logo
          width: auto
          a
            display: inline-block
            padding:
              right: 50px
            &:hover
              opacity: 1
            img
              display: block
              height: 75px

        // Claims
        .claims
          span
            display: block

        // Links
        .links
          white:
            space: nowrap
          &:hover
            a
              opacity: 0.5
          text:
            align: right
            transform: uppercase
          a
            display: inline-block
            padding: 0.75em
            background: rgba(255,255,255,0.2)
            border:
              radius: 4px
            font:
              weight: bold
            text:
              decoration: none
            margin:
              left: 0.35em
            &:hover
              opacity: 1

          // Phone
          .number
            display: inline-block
            vertical:
              align: middle
            font:
              size: 1.65em
              weight: bold
            a
              background: none


  ////////////////////////////////
  ////////////////////////////////

  // Main
  main
    color: rgba(255,255,255,1)

    // General
    h1
      &.title
        display: block
        padding: 0.75em 0 0.5em
        margin:
          bottom: 0.5em

    // Flash
    .flash
      > div
        diplay: block !important
        width: 100%
        padding: 1em
        margin:  1em 0
        font:
          weight: bold
        line:
          height: 1.5em
        box:
          sizing: border-box
        vertical:
          align: middle
        &:hover
          cursor: pointer
        &.notice
          background: rgba(0,255,40,0.075)
          border:
            color: rgba(0,255,40,1)
            size: 1px !important
            style: solid
          &:before
            content: "✔️"
            display: inline-block
            margin:
              right: 0.25em
            font:
              size: 1.25em


    // General
    .formtastic
      .errors
        padding: 1.5em
        margin: 0 0 1em 0
        color: rgba(255,0,0,1)
        background: rgba(255,0,0,0.15)
        border: 1px solid rgba(255,0,0,1)
        font:
          size: 0.95em
        list:
          style: none !important
        border:
          radius: 4px
        text:
          shadow: 0 1px 1px rgba(0,0,0,1)
        li
          &:before
            display: inline-block
            content: "⚠️"
            font:
              size: 1.5em
            margin:
              right: 0.25em
            text:
              shadow: none

    // Index
    &.index

    // FAQ
    &.faq


    // Claims
    &.claims

      // Form
      form
        padding:
          top: 1em

        // Inputs
        fieldset
          overflow: visible

          // Last Boolean Section
          &.bools
            &:hover
              ol
                li
                  opacity: 0.55
            ol
              li
                &:hover
                  opacity: 1

          // Actions
          &.actions
            padding:
              top:  0.25em
              left: 0 !important
            input
              &[type='submit']
                width: 100%
                box:
                  sizing: border-box

        // General List
        ul,
        ol
          margin:
            left: 0
          padding:
            left: 0
          list:
            style: none
          li
            width: auto
            &.error
              input,
              textarea
                border: 1px solid rgba(255,0,0,1)
            label
              width: none
              abbr
                display: inline-block
                color: rgba(255,0,0,1)
                padding: 0 0.5em
            input,
            textarea
              border: 1px solid rgba(0,0,0,1)
              transition: color 0.15s ease-in-out
              margin:
                left: 0 !important
              &:hover
                &:placeholder
                  color: rgba(255,0,0,1) !important
            textarea
              padding: 10px

            // Checkboxes
            &.boolean
              display: block
              padding: 0.15em 0
              margin:  0
              transition: opacity 0.15s ease-in-out
              &:hover
                label
                  cursor: pointer
              label
                display: inline-block
                width: 100%
                white:
                  space: nowrap
                padding:
                  left: 0
              input
                display: inline-block
                position: relative
                background: rgba(255,255,255,1)
                appearance: none
                padding: 1em
                border: 1px solid rgba(0,0,0,1)
                margin:
                  left:  0
                  right: 0.75em
                &:checked
                  &:after
                    content: '✔️'
                    display: block
                    font-size: 14px
                    position: absolute
                    top: 30%
                    left: 2px
                    color: #99a1a7

            .inline-errors
              display: block
              color: rgba(255,0,0,1)

      // Form
      form
        display: block

        ol
          li
            padding: 2px 0
            input
              display: inline-block
              padding: 10px
              margin:
                  left: 150px
              vertical:
                align: middle

  ////////////////////////////////
  ////////////////////////////////

  // Footer
  footer
    color: rgba(255,255,255,1)
    background: rgba(0,0,0,1)
    padding: 2.5em 1.5em
    position: relative

    // Container
    .container
      display: flex
      justify:
        content: space-between
      align:
        items: top

      // Each div
      > div
        width: 50%

      // Company
      .company
        > div
          margin:
            bottom: 0.25em
          &:before
            display: inline-block
            margin:
              right: 0.25em
        .title
          font:
            size: 1.35em
            weight: bold
          &:after
            display:  block
            content:  " "
            margin:   15px 0 10px
            width:    20px
            height:   3px
            background: rgba(255,255,255,1)
          a
            &.reviews
              display: block
              color: transparent
              width: 200px
              padding: 0.65em 0
              background:
                image: asset_url('tp.png')
                size:  contain
                repeat: space
              &:hover
                color: transparent
                text:
                  decoration: none
        .email
          &:before
            content: "✉️"
        .office
          &:before
            content: "🏢"
        .number
          &:before
            content: "💼"

      // Contact
      .contact
        text-align: right

