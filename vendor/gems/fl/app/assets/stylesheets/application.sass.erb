// Responsive
@media (max-width: 1170px)
  body
    main
      &.index
        .success
          flex:
            direction: column
          > div
            width: 100% !important
            margin:
              top: 5px !important
            h3
              font:
                size: 9em

////////////////////////////////
////////////////////////////////

@media (max-width: 1125px)
  main
    .container
      padding:
        bottom: 85px

////////////////////////////////
////////////////////////////////

@media (max-width: 1080px)
  main
    .formtastic
      label
        margin:
          bottom: 2px
      textarea
        width: 100% !important
        box:
          sizing: border-box
      .stringish
        label
          margin:
            bottom: 2px
        input
          width: 100%
          box:
            sizing: border-box

////////////////////////////////
////////////////////////////////

@media (max-width: 730px)
  body
    main
      &.index
        .success
          margin:
            bottom: 35px

