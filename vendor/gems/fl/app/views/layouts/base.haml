%html
  %head
    = title yield(:title) + (" - " if content_for(:title)) + Rails.application.credentials[Rails.env.to_sym][:app][:name]

    = meta :stylesheet,  :application

  %body{ class: params[:id] || ([controller_name, action_name].join(' ')) }

    - # Elements
    - %i(header main footer).each do |item|
      = render "layout/#{item}"
