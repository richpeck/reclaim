!!!
%html

  / Head
  %head
    = title yield(:title) + (" - " if content_for(:title)) + Rails.application.credentials[Rails.env.to_sym][:app][:name]

    = meta :js,          :application, "//www.googletagmanager.com/gtag/js?id=#{Rails.application.credentials[Rails.env.to_sym][:app][:analytics]}", ("//maps.google.com/maps/api/js?key=#{Rails.application.credentials[Rails.env.to_sym][:google][:maps]}" if params[:id] == "contact")
    = meta :stylesheet,  :application, "//fonts.googleapis.com/css?family=Montserrat", media: :all

    = meta :description, Rails.application.credentials[Rails.env.to_sym][:app][:description]
    = meta :keywords,    Rails.application.credentials[Rails.env.to_sym][:app][:keywords]
    = meta :author,      Rails.application.credentials[Rails.env.to_sym][:app][:author]

    = meta :meta,       "pinterest, no pin"
    = meta :viewport,   "width=device-width, initial-scale=1"

    = meta :favicon
    = meta :robots
    = meta :csrf

    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '#{Rails.application.credentials[Rails.env.to_sym][:app][:analytics]}');

  / Body
  %body

    / Header
    %header= render "layout/header"

    / Main
    %main{ class: params[:id].to_s || ([controller_name, action_name].join(' ')) }
      .container
        .height
          = yield

    / Footer
    %footer= render "layout/footer"
