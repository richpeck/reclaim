/ Navigation
%nav

  / Top
  .top
    .container
      .social
        - {envelope: "mailto: #{Rails.application.credentials[Rails.env.to_sym][:app][:email]}", twitter: 'https://www.twitter.com/DamageReclaim', linkedin: 'https://www.linkedin.com/company/damagereclaim/', facebook: 'https://www.facebook.com/Damage-Reclaim-659249180932932/'}.each do |k,v|
          = link_to "", v, class: "fa fa-#{k}-square", target: :blank
      .company
        = [content_tag(:strong, link_to(Rails.application.credentials[Rails.env.to_sym][:company][:name], root_url)), Rails.application.credentials[Rails.env.to_sym][:company][:address]].join(' â†’ ').html_safe
        = link_to Rails.application.credentials[Rails.env.to_sym][:company][:phone], "tel: #{Rails.application.credentials[Rails.env.to_sym][:company][:phone]}", class: "phone fa fa-phone"

  / Container
  .container

    / Logo
    .logo= link_to image_tag("logo_long.png", "nopin" => "true"), root_url

    / Navigation
    / Instant Quote
    .claims
      %span
        %u Damage Reclaim LTD
        provides an
        %u INSTANT
        solution for rental damage claims
      %span
        Based in London, we're
        %u available 24/7
        to help reduce your rental repair bills...

  / Links
  %div{class: ["links", ("current" if @header_links.key(params[:id].to_s))] }
    - @header_links.each do |text, link|
      = link_to text, link, class: [link, ("current" if params[:id].to_s == link)]
